{
  "openapi": "3.0.2",
  "info": {
    "title": "Movie Filter API",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://movie-filter-api.onrender.com"
    }
  ],
  "paths": {
    "/health": {
      "get": {
        "summary": "Health",
        "operationId": "health_health_get",
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          }
        },
        "description": ""
      }
    },
    "/generate": {
      "post": {
        "summary": "Generate",
        "operationId": "generate_generate_post",
        "parameters": [
          {
            "name": "authorization",
            "in": "header",
            "required": false,
            "schema": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "null"
                }
              ],
              "title": "Authorization"
            },
            "description": ""
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/GenerateReq"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Successful Response",
            "content": {
              "application/json": {
                "schema": {}
              }
            }
          },
          "422": {
            "description": "Validation Error",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/HTTPValidationError"
                }
              }
            }
          }
        },
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "description": ""
      }
    }
  },
  "components": {
    "schemas": {
      "GenerateReq": {
        "properties": {
          "style_hint": {
            "type": "string",
            "title": "Style Hint",
            "description": "원하는 분위기/느낌 요약"
          },
          "k": {
            "type": "integer",
            "maximum": 10.0,
            "minimum": 1.0,
            "title": "K",
            "description": "최종 출력 개수 (기본 10)",
            "default": 10
          },
          "n": {
            "type": "integer",
            "maximum": 80.0,
            "minimum": 1.0,
            "title": "N",
            "description": "후보 생성 개수 (입력 1~80 허용, 서버에서 최소 10으로 보정)",
            "default": 10
          }
        },
        "type": "object",
        "required": [
          "style_hint"
        ],
        "title": "GenerateReq"
      },
      "HTTPValidationError": {
        "properties": {
          "detail": {
            "items": {
              "$ref": "#/components/schemas/ValidationError"
            },
            "type": "array",
            "title": "Detail"
          }
        },
        "type": "object",
        "title": "HTTPValidationError"
      },
      "ValidationError": {
        "properties": {
          "loc": {
            "items": {
              "anyOf": [
                {
                  "type": "string"
                },
                {
                  "type": "integer"
                }
              ]
            },
            "type": "array",
            "title": "Location"
          },
          "msg": {
            "type": "string",
            "title": "Message"
          },
          "type": {
            "type": "string",
            "title": "Error Type"
          }
        },
        "type": "object",
        "required": [
          "loc",
          "msg",
          "type"
        ],
        "title": "ValidationError"
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer"
      }
    }
  }
}